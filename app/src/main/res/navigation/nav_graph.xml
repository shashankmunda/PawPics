<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.shashankmunda.pawpics.ui.feed.HomeFeedFragment"
        android:label="@string/label_home"
        tools:layout='@layout/home_feed_fragment' >
        <action
            android:id="@+id/action_home_fragment_to_full_cat_image_fragment"
            app:destination="@id/cat_image_fragment"
            app:popUpTo="@id/home_fragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/cat_image_fragment"
        android:name="com.shashankmunda.pawpics.ui.details.CatImageFragment"
        android:label=""
        tools:layout="@layout/cat_image_fragment">
        <argument
            android:name="image_id"
            app:argType="string"
            />
        <action
            android:id="@+id/action_cat_image_fragment_to_imageEditorFragment"
            app:destination="@id/imageEditorFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageEditorFragment"
        android:name="com.shashankmunda.pawpics.ui.image_editor.ImageEditorFragment"
        android:label="ImageEditorFragment">
        <argument
            android:name="image_uri"
            app:argType="string" />
    </fragment>
</navigation>